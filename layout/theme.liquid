
<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <link rel="canonical" href="{{ canonical_url }}">

    <title>{{ page_title }} | Ropa Easy IA</title>

    {% if page_description %}
      <meta name="description" content="{{ page_description | escape }}">
    {% endif %}

    {{ content_for_header }}

    <!-- Tailwind & Fonts -->
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;800&family=Playfair+Display:ital,wght@0,700;1,700&display=swap" rel="stylesheet">
    
    <style>
      :root {
        --brand-orange: {{ settings.brand_orange | default: '#f0945c' }};
        --brand-slate: {{ settings.brand_slate | default: '#0f172a' }};
      }
      body { font-family: 'Inter', sans-serif; color: var(--brand-slate); }
      .font-display { font-family: 'Playfair Display', serif; }
    </style>
  </head>

  <body class="antialiased selection:bg-orange-100 overflow-x-hidden">
    {% section 'header' %}

    <!-- React App Root -->
    <div id="root"></div>

    <main id="MainContent" role="main">
      {{ content_for_layout }}
    </main>

    {% section 'footer' %}

    <script type="module" src="/index.tsx"></script>
  </body>
</html>
