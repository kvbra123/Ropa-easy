
<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>{{ page_title }} - ROPA EASY IA</title>
    
    {% if page_description %}
      <meta name="description" content="{{ page_description | escape }}">
    {% endif %}

    {{ content_for_header }}

    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;800&family=Playfair+Display:ital,wght@0,700;1,700&display=swap" rel="stylesheet">
    
    <style>
      :root {
        --brand-orange: #f0945c;
        --brand-slate: #0f172a;
      }
      body { 
        font-family: 'Inter', sans-serif; 
        -webkit-font-smoothing: antialiased;
        text-rendering: optimizeLegibility;
      }
      .font-display { font-family: 'Playfair Display', serif; }
      
      .animate-in {
        animation: fadeIn 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards;
      }
      @keyframes fadeIn {
        from { opacity: 0; transform: translateY(10px); }
        to { opacity: 1; transform: translateY(0); }
      }

      #root {
        min-height: 100vh;
      }

      {% if template == 'index' %}
        #MainContent { display: none; }
      {% endif %}
    </style>
  </head>

  <body class="bg-white text-slate-900 antialiased overflow-x-hidden">
    {% section 'header' %}

    <div id="root">
      <!-- Los componentes de React (Hero IA, Grid, ImageEditor) se montarán aquí -->
    </div>

    <main id="MainContent" role="main" tabindex="-1">
      {{ content_for_layout }}
    </main>

    {% section 'footer' %}

    <script type="module" src="/index.tsx"></script>
  </body>
</html>
