
<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <link rel="canonical" href="{{ canonical_url }}">
    
    <title>{{ page_title }} - Ropa Easy IA</title>
    
    {% if page_description %}
      <meta name="description" content="{{ page_description | escape }}">
    {% endif %}

    {{ content_for_header }}

    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;800&family=Playfair+Display:ital,wght@0,700;1,700&display=swap" rel="stylesheet">
    
    <style>
      :root {
        --brand-orange: {{ settings.brand_orange | default: '#f0945c' }};
        --brand-slate: {{ settings.brand_slate | default: '#0f172a' }};
      }
      body { 
        font-family: 'Inter', sans-serif; 
        -webkit-font-smoothing: antialiased;
      }
      .font-display { font-family: 'Playfair Display', serif; }
      
      .animate-in {
        animation: fadeIn 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards;
      }
      @keyframes fadeIn {
        from { opacity: 0; transform: translateY(10px); }
        to { opacity: 1; transform: translateY(0); }
      }

      /* Shopify Header Overrides */
      #MainContent { 
        min-height: 100vh;
      }
      
      {% if template == 'index' %}
        /* En la home el contenido nativo se oculta para dar paso a la App React */
        #MainContent { display: none; }
      {% endif %}
    </style>
  </head>

  <body class="bg-white text-slate-900 antialiased overflow-x-hidden selection:bg-orange-100">
    {% section 'header' %}

    <div id="root">
      <!-- Punto de montaje para ImageEditor (1:1) y AI Personal Shopper -->
    </div>

    <main id="MainContent" role="main" tabindex="-1">
      {{ content_for_layout }}
    </main>

    {% section 'footer' %}

    <script type="module" src="/index.tsx"></script>
  </body>
</html>
