
<section class="relative py-32 lg:py-48 overflow-hidden bg-slate-50">
  <div class="max-w-[1400px] mx-auto px-6 lg:px-12 relative z-10">
    <div class="max-w-3xl">
      <h1 class="text-7xl lg:text-9xl font-display italic text-slate-900 leading-[0.85] mb-8">
        {{ section.settings.title }}
      </h1>
      <p class="text-xs lg:text-sm text-slate-500 uppercase tracking-[0.2em] leading-loose mb-12 max-w-md">
        {{ section.settings.description }}
      </p>
      <a href="{{ section.settings.button_link | default: '#contact-digitalize' }}" class="inline-block px-12 py-5 bg-slate-900 text-white text-[10px] font-black uppercase tracking-[0.3em] hover:bg-orange-500 transition-colors">
        {{ section.settings.button_label }}
      </a>
    </div>
  </div>
  <div class="absolute top-0 right-0 w-1/2 h-full opacity-10 pointer-events-none">
    <svg viewBox="0 0 100 100" class="w-full h-full"><path d="M0 50 Q 50 0 100 50 T 200 50" fill="none" stroke="currentColor" stroke-width="0.5"/></svg>
  </div>
</section>

{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Título",
      "default": "Nueva <br>Era Digital."
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Descripción",
      "default": "Transformando catálogos físicos en experiencias 3D inmersivas."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Etiqueta Botón",
      "default": "Explorar Ahora"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Link Botón (dejar vacío para ir al formulario)"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner Default"
    }
  ]
}
{% endschema %}
