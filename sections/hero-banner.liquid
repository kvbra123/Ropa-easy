
<section class="relative min-h-[80vh] flex items-center bg-slate-50 overflow-hidden border-b border-slate-100">
  <div class="max-w-[1400px] mx-auto px-6 lg:px-12 w-full grid grid-cols-1 lg:grid-cols-12 gap-12 relative z-10">
    <div class="lg:col-span-8">
      <span class="text-[10px] font-black uppercase tracking-[0.5em] text-orange-500 mb-8 block underline decoration-2 underline-offset-8">Shopify Tech Edition</span>
      <h1 class="text-7xl lg:text-[10rem] font-display italic text-slate-900 leading-[0.8] mb-12 tracking-tighter">
        {{ section.settings.title }}
      </h1>
      <p class="text-xs lg:text-sm text-slate-400 uppercase tracking-[0.2em] leading-loose max-w-md mb-16">
        {{ section.settings.description }}
      </p>
      <div class="flex flex-col sm:flex-row gap-8">
        <a href="#search" class="inline-flex items-center group">
          <span class="text-[11px] font-black uppercase tracking-[0.4em] border-b-2 border-slate-900 pb-2 group-hover:border-orange-500 transition-colors">
            {{ section.settings.button_label }}
          </span>
          <svg class="w-5 h-5 ml-4 group-hover:translate-x-2 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M17 8l4 4m0 0l-4 4m4-4H3" stroke-width="2"/></svg>
        </a>
      </div>
    </div>
  </div>

  <!-- Decoración Background -->
  <div class="absolute top-1/2 right-0 -translate-y-1/2 opacity-[0.03] pointer-events-none select-none">
    <span class="text-[30rem] font-black uppercase tracking-tighter leading-none">IA</span>
  </div>
</section>

{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    { "type": "text", "id": "title", "label": "Título", "default": "Estilo <br>Procesado." },
    { "type": "textarea", "id": "description", "label": "Descripción", "default": "Motor de inteligencia artificial para la digitalización de marcas de moda." },
    { "type": "text", "id": "button_label", "label": "Etiqueta Botón", "default": "Explorar Visión" }
  ]
}
{% endschema %}
