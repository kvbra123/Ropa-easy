
<section class="relative h-[90vh] flex items-center justify-center overflow-hidden">
  <!-- Imagen de Fondo con Overlay -->
  <div class="absolute inset-0 z-0">
    <img 
      src="{{ section.settings.image | default: 'https://images.unsplash.com/photo-1490481651871-ab68624d5517?q=80&w=2070&auto=format&fit=crop' }}" 
      alt="Hero Background" 
      class="w-full h-full object-cover"
    >
    <div class="absolute inset-0 bg-slate-900/40 backdrop-blur-[2px]"></div>
  </div>

  <!-- Contenido Central -->
  <div class="relative z-10 text-center px-6 max-w-4xl mx-auto">
    <span class="inline-block text-[10px] md:text-xs font-black uppercase tracking-[0.5em] text-white mb-6 animate-in fade-in slide-in-from-bottom-4 duration-700">
      {{ section.settings.subtitle | default: 'Edición Limitada' }}
    </span>
    
    <h1 class="text-6xl md:text-8xl lg:text-[10rem] font-display italic text-white leading-none mb-12 tracking-tighter animate-in fade-in slide-in-from-bottom-8 duration-1000">
      {{ section.settings.title | default: 'Nueva Colección 2024' }}
    </h1>

    <div class="flex flex-col md:flex-row items-center justify-center gap-8 animate-in fade-in slide-in-from-bottom-12 duration-1000">
      <a href="{{ section.settings.button_link | default: '/collections/all' }}" 
         class="px-12 py-5 bg-white text-slate-900 text-[10px] font-black uppercase tracking-[0.3em] hover:bg-orange-500 hover:text-white transition-all duration-500 shadow-2xl">
        {{ section.settings.button_label | default: 'Explorar Ahora' }}
      </a>
      
      <p class="text-[10px] text-white/70 uppercase tracking-[0.2em] max-w-[200px] text-left hidden md:block border-l border-white/20 pl-6">
        Diseños forjados en la intersección de la tecnología y la alta costura.
      </p>
    </div>
  </div>

  <!-- Decoración Lateral -->
  <div class="absolute bottom-12 left-12 hidden lg:block">
    <div class="flex flex-col space-y-4">
      <div class="w-1 h-20 bg-gradient-to-b from-orange-500 to-transparent"></div>
      <span class="text-[8px] font-bold text-white/30 uppercase vertical-text tracking-widest" style="writing-mode: vertical-rl;">EST. 2024</span>
    </div>
  </div>
</section>

<style>
  .vertical-text {
    transform: rotate(180deg);
  }
</style>

{% schema %}
{
  "name": "Hero Banner Impactante",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Título Principal",
      "default": "Nueva Colección 2024"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtítulo",
      "default": "Edición Limitada"
    },
    {
      "type": "url",
      "id": "image",
      "label": "URL de Imagen de Fondo (Opcional)"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Etiqueta del Botón",
      "default": "Explorar Ahora"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Enlace del Botón"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner Impactante"
    }
  ]
}
{% endschema %}
